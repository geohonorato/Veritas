{
  "name": "cesupa-dashboard",
  "version": "1.0.0",
  "description": "Dashboard de controle de acesso",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Geovanni Honorato",
  "license": "ISC",
  "dependencies": {
    "serialport": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.geovanni.cesupadashboard",
    "productName": "WorkWise Desktop",
    "directories": {
      "output": "../build"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      "database.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
